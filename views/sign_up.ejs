<% include partials/header %>

    <!-- sign_up Form -->
  <div class="col-sm-2 offset-sm-5 h-100 p-0">
	<% include partials/errors %>
    <form method="POST" action="/api/sign_up">
		<div class="spacerVert"></div>
	  <label for="fName">First Name</label>
	  <input type="text" class="col-12" id="fName" name="fName" placeholder="First Name">
		<div class="spacerVert"></div>
	  <label for="lName">Last Name</label>
	  <input type="text" class="col-12" id="lName" name="lName" placeholder="Last Name">
		<div class="spacerVert"></div>
	  <label for="email">Email</label>
      <input type="text" class="col-12" id="email" name="email" placeholder="Email">
		<div class="spacerVert"></div>
	  <label for="username">Username</label>
      <input type="text" class="col-12" id="username" name="username" placeholder="Username">
		<div class="spacerVert"></div>
	  <label for="password">Password</label>
      <input type="text" class="col-12" id="password" name="password" placeholder="Password">
		<div class="spacerVert"></div>
	    <label for="password1">Verify Password</label>
      <input type="text" class="col-12" id="password1" name="password1" placeholder="Password">
		<div class="spacerVert"></div>
      <button class="btn mt-3" type="submit" name="submitButton" method="POST" action="/api/sign_up">Submit form</button>
    </form>
  </div>

  <% include partials/footer %>